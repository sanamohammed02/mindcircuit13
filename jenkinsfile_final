pipeline {
    agent any


       tools {
        maven 'maven3'
    }

    stages {
      stage('checkout') {
            steps {
                echo 'Cloning GIT HUB Repo '
				git branch: 'main', url: 'https://github.com/sanamohammed02/mindcircuit13.git'
            }  
        }
		
		
		
	 stage('sonar') {
            steps {
                echo 'scanning project'
                sh 'ls -ltr'
                
                sh ''' mvn sonar:sonar \\
                      -Dsonar.host.url=http://13.232.68.201:9000 \\
                      -Dsonar.login=squ_8fd51f3fc325bbfb1f18e2cbcdb05de8eddc8fc3'''
            }
    	}
		
		
		
        stage('Build Artifact') {
            steps {
                echo 'Build Artifact'
				sh 'mvn clean package'
            }
        }
		
		
		
        stage('Docker Image') {
            steps {
                echo 'Docker Image building'
				sh 'docker build -t sanamd/cicd-demo-image:${BUILD_NUMBER} .'
            }
        }
		
		
       stage('Push to Dockerhub') {
            steps {
			 script {
			withCredentials([string(credentialsId: 'dockerhub', variable: 'dockerhub')]) 
			{
            sh 'docker login -u sanamd -p ${dockerhub}'
			
			 }
			   sh 'docker push sanamd/cicd-demo-image:${BUILD_NUMBER}'
			   
           
				}
				
            }
        }
		
		
    stage('Update Deployment File') {
		
		 environment {
            GIT_REPO_NAME = "mindcircuit13"
            GIT_USER_NAME = "sanamohammed02"
        }
		
            steps {
                echo 'Update Deployment File'
				withCredentials([string(credentialsId: 'github', variable: 'github')]) 
				{
                  sh '''
                    git config user.email "sanasulthana2002@gmail.com"
                    git config user.name "sana"
                    BUILD_NUMBER=${BUILD_NUMBER}
                    sed -i "s/cicd-demo-image:.*/cicd-demo-image:${BUILD_NUMBER}/g" deploymentfiles/deployment.yml
                    git add .
                    
                    git commit -m "Update deployment image to version ${BUILD_NUMBER}"

                    git push https://${github}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:main
                '''
				  
                 }
				
            }
        }
		
		
			
    }

}
